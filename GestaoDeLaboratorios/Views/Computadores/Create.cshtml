@model GestaoDeLaboratorios.Models.Computadores

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastro</h1>

<h4>Computadores</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label">Marca</label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Processador" class="control-label">Processador</label>
                <input asp-for="Processador" class="form-control" />
                <span asp-validation-for="Processador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlacaMae" class="control-label">Placa Mãe</label>
                <input asp-for="PlacaMae" class="form-control" />
                <span asp-validation-for="PlacaMae" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Memoria" class="control-label">Memória</label>
                <input asp-for="Memoria" class="form-control" />
                <span asp-validation-for="Memoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HD" class="control-label">HD</label>
                <input asp-for="HD" class="form-control" />
                <span asp-validation-for="HD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroPatrimonio" class="control-label">Número de Patrimonio</label>
                <input asp-for="NumeroPatrimonio" class="form-control" />
                <span asp-validation-for="NumeroPatrimonio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataCompra" class="control-label">Data da Compra</label>
                <input asp-for="DataCompra" class="form-control" />
                <span asp-validation-for="DataCompra" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
